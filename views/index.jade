extends layout

block content
  if posts
   each post, i in posts
    .post
     h1
      a(href='/posts/show/#{post._id}')
       =post.title
     p.meta Posted by 
      by #{post.author} in 
      a(href='/categories/show/#{post.category}') #{post.category}
      on  on #{moment(post.date).format("MM-DD-YYYY")}
     img(src='/images/#{post.mainimage}' width = "500" height = "600" )
     !=truncateText(post.body,400)
     a.more(href='/posts/show/#{post._id}') Read More
